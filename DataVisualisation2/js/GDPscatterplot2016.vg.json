{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "background": "#d6ccc2",
  "data": {
    "url": "https://raw.githubusercontent.com/zhiquan272/FIT3179/main/DataVisualisation2/Data/2016.csv"
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "GDP_per_capita",
          "type": "quantitative",
          "axis": {"title": "GDP of each country"}
        },
        "y": {
          "field": "Score",
          "type": "quantitative",
          "axis": {"title": "Happiness Score"}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "GDP_per_capita", "type": "quantitative", "title": "GDP","format":".2f"},
          {"field": "Score", "type": "quantitative", "title": "Happiness Score","format":".2f"}
        ],
        "color":{
          "value":"red"
        }
      }
    }
  ]
}
